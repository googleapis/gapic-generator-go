{
  "extends": [
    "config:base",
    ":disableDependencyDashboard",
    ":semanticCommitTypeAll(chore)",
    "schedule:weekly"
  ],
  "ignoreDeps": [
    "bazel_gazelle",
    "com_google_protobuf",
    "io_bazel_rules_go"
  ],
  "golang": {
    "ignoreDeps": [
      "github.com/russross/blackfriday"
    ],
    "postUpdateOptions": [
      "gomodTidy"
    ]
  },
  "rebaseWhen": "behind-base-branch",
  "labels": [
    "automerge"
  ],
  "groupName": "deps",
  "force": {
    "constraints": {
      "go": "1.21"
    }
  }
}
